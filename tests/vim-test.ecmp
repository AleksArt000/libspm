[info]
name = vim
version = 8.2
type = src
license = MIT
url = https://anduin.linuxfromscratch.org/BLFS/vim/vim-9.0.0228.tar.gz

[download]
curl $URL | tar -xz 

[install]
sh autogen.sh
./configure --prefix=/usr
make
make DESTDIR=$BUILD_ROOT install

[special]
echo "the package is installed"
echo "done..."

